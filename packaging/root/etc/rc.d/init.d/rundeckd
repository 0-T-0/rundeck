#!/bin/sh
#
# rundeckd    Startup script for the tapd
#
# chkconfig: 2345 90 10
# description: rundeckd, providing rundeckd
# pidfile: /var/run/rundeckd.pid

# Source function library
. /etc/rc.d/init.d/functions

prog="rundeckd"
rundeckd="java -Djava.security.auth.login.config=/etc/rundeck/server/jaas-loginmodule.conf -Dloginmodule.name=RDpropertyfilelogin -Drdeck.config=/etc/rundeck/client -Drdeck.base=/etc/rundeck/client -Drundeck.server.configDir=/etc/rundeck/server -Dserver.datastore.path=/var/run/rundeck/data -Drundeck.server.serverDir=/var/run/rundeck -Drdeck.projects=/var/rundeck/projects -Drdeck.runlogs=/var/run/rundeck/logs -Drundeck.config.name=/etc/rundeck/server/rundeck-config.properties -cp $(find /var/run/rundeck/lib -printf %p:)/var/run/rundeck/lib/rundeck-server-1.0.0.jar:/etc/rundeck/server:/etc/rundeck/server/log4j.properties com.dtolabs.rundeck.RunServer /etc/rundeck/client 9999"
RETVAL=0
PID_FILE=/var/run/rundeckd.pid

start() {
	echo -n $"Starting $prog: "
	nohup $rundeckd 2>&1 >/var/log/rundeck/service.log &
	RETVAL=$?
	echo $RETVAL > /var/run/rundeckd.pid
	echo
	[ $RETVAL -eq 0 ] && touch /var/lock/subsys/$prog
	return $RETVAL
}

stop() {
	echo -n $"Stopping $prog: "
	killproc $rundeckd
	RETVAL=$?
	echo
	[ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/$prog
	return $RETVAL
}

reload() {
	echo -n $"Reloading $prog: "
	killproc $rundeckd -HUP
	RETVAL=$?
	echo
	return $RETVAL
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		stop
		start
		;;
	condrestart)
		if [ -f /var/lock/subsys/$prog ]; then
			stop
			start
		fi
		;;
	reload)
		reload
		;;
	status)
		status $rundeckd
		RETVAL=$?
		;;
	*)
		echo $"Usage: $0 {start|stop|restart|condrestart|reload|status}"
		RETVAL=1
esac

exit $RETVAL
